<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AccueilFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
          >


            <ImageView
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:src="@drawable/logoassos" />

            <!-- Boîte de recherche -->
            <LinearLayout
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/search_box_background"
                    android:orientation="horizontal"
                    android:padding="4dp">

                    <EditText
                        android:id="@+id/search_input"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="@string/search_input"
                        android:outlineProvider="none"
                        android:padding="12dp"
                        android:textSize="16sp" />

                    <ImageButton
                        android:id="@+id/search_button"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@drawable/search_button_background"
                        android:contentDescription="@string/search_button"
                        android:padding="12dp"
                        android:src="@drawable/ic_search" />
                </LinearLayout>
            </LinearLayout>

            <!-- Résultats de recherche -->
            <ListView
                android:id="@+id/search_results"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="8dp"
                android:visibility="gone" />

            <!-- Carrousel -->
            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/viewPager"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"

                />

            <Button
                android:id="@+id/btn_don"
                android:layout_width="300dp"
                android:layout_height="66dp"
                android:layout_gravity="center"
                android:backgroundTint="?attr/colorPrimaryVariant"
                android:text="Découvrir nos partenaires"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="36dp"
              >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >


                <LinearLayout
                    android:layout_width="132dp"
                    android:layout_height="104dp"
                    android:layout_margin="16dp"
                    android:background="@drawable/bgsq"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="10dp"
                    android:orientation="vertical">


                    <ImageView
                        android:id="@+id/icon"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="right"
                        android:src="@drawable/settings" />


                    <TextView
                        android:id="@+id/title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Parametrre"
                        android:textAlignment="center"
                        android:textSize="18sp"
                        android:textColor="@color/white"/>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="132dp"
                    android:layout_height="104dp"
                    android:layout_margin="16dp"
                    android:background="@drawable/bgsq"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="10dp"
                    android:orientation="vertical">


                    <ImageView
                        android:id="@+id/icon2"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="right"
                        android:src="@drawable/user"
                        />


                    <TextView
                        android:id="@+id/espace"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Votre espace"
                        android:textSize="18sp"
                        android:textColor="@color/white"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="132dp"
                    android:layout_height="104dp"
                    android:layout_margin="16dp"
                    android:background="@drawable/bgsq"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="10dp"
                    android:orientation="vertical">


                    <ImageView
                        android:id="@+id/card"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="right"
                        android:src="@drawable/card" />

                    <TextView
                        android:id="@+id/carte"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Votre carte"
                        android:textSize="18sp"
                        android:textColor="@color/white"/>
                </LinearLayout>
                </LinearLayout>
            </HorizontalScrollView>



        </LinearLayout>
    </ScrollView>


</RelativeLayout>
