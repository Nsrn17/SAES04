<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="top|center_horizontal"
            android:background="@android:color/white"
            android:padding="24dp">

            <ImageView
                android:id="@+id/logoassos"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/logoassos"
                android:layout_marginTop="30dp"
                android:adjustViewBounds="true"
                android:layout_marginBottom="20dp" />


            <TextView
                android:id="@+id/admin_profil_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:background="@drawable/textview_background"
                android:backgroundTint="?attr/colorPrimaryVariant"
                android:fontFamily="@font/poppinsmedium"
                android:text="@string/profil_mail"
                android:padding="12dp"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/admin_profil_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:background="@drawable/textview_background"
                android:backgroundTint="?attr/colorPrimaryVariant"
                android:fontFamily="@font/poppinsmedium"
                android:text="@string/profil_nom"
                android:padding="12dp"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/admin_profil_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="40dp"
                android:background="@drawable/textview_background"
                android:backgroundTint="?attr/colorPrimaryVariant"
                android:fontFamily="@font/poppinsmedium"
                android:text="@string/profil_username"
                android:padding="12dp"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                android:textSize="15sp" />


            <TextView
                android:id="@+id/admin_profil_asso"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/textview_background"
                android:backgroundTint="?attr/colorPrimaryVariant"
                android:fontFamily="@font/poppinsmedium"
                android:text="@string/admin_profil_asso"
                android:padding="12dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <!--<ImageView
                    android:id="@+id/admin_cadenas"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/cadenas"
                    android:layout_marginTop="30dp"
                    android:gravity="center"
                    android:adjustViewBounds="true"
                    android:layout_marginBottom="20dp" />-->

                <TextView
                    android:id="@+id/text_debut_acces_admin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:padding="0dp"
                    android:text="@string/acc_der_l_espace_admin"
                    android:fontFamily="@font/poppinslight"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" /> <!-- ou autre drawable stylisé -->

                <TextView
                    android:id="@+id/text_resume_dons"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="@string/appuyez_ici"
                    android:fontFamily="@font/poppinsmedium"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" /> <!-- ou autre drawable stylisé -->

            </LinearLayout>

            <Button
                android:id="@+id/btn_deconnexion"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="@drawable/button_background"
                android:fontFamily="@font/poppinsbold"
                android:padding="0dp"
                android:text="@string/btn_deconnexion"
                android:textColor="@android:color/white"
                android:textStyle="bold" />


        </LinearLayout>

    </ScrollView>


</RelativeLayout>