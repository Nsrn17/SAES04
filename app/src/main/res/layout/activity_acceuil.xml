<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AcceuilActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        tools:ignore="ExtraText">

        <!-- Logo -->
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:src="@drawable/lofofs" />

        <!-- Bannière -->

        <!-- Conteneur de recherche -->



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp">

            <!-- Boîte de recherche -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/search_box_background"
                android:padding="4dp"
                android:layout_marginTop="12dp">

                <!-- Champ de recherche -->
                <EditText
                    android:id="@+id/search_input"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:padding="12dp"
                    android:textSize="16sp"
                    android:hint="Rechercher une association..."
                    android:outlineProvider="none" />

                <!-- Bouton de recherche -->
                <ImageButton
                    android:id="@+id/search_button"
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    android:background="@drawable/search_button_background"
                    android:src="@drawable/ic_search"
                    android:contentDescription="Lancer la recherche"
                    android:padding="12dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Résultats de recherche (masqué par défaut) -->
        <ListView
            android:id="@+id/search_results"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:visibility="gone"
            android:layout_marginTop="8dp" />

        <!-- Carrousel -->
        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="166dp"
            android:layout_marginBottom="16dp" />

        <!-- Bouton "Faire un don" -->
        <Button
            android:id="@+id/btn_don"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Faire un don"
            android:textSize="16sp"
            android:backgroundTint="@color/blue"
            android:textColor="@color/white"
            android:layout_marginTop="16dp"/>
    </LinearLayout>
</ScrollView>