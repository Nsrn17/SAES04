<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/white"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="694dp"

        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="180dp"
                android:background="@drawable/gradient_background"
                android:orientation="vertical"
                android:translationX="50dp"
                android:translationY="50dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="60dp"
                    android:layout_marginTop="20dp"
                    android:text="@string/r_sum_des_dons"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"

                    >


                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="91dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/total_des_dons"
                    android:textColor="#D9D9D9"
                    android:textSize="15sp"
                    android:textStyle="bold">


                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="90dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/_500"
                    android:textColor="@color/white"
                    android:textSize="40sp"
                    android:textStyle="bold">


                </TextView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="80dp"
                    tools:ignore="UseCompoundDrawables">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/coeur">

                    </ImageView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/_6_donations"
                        android:textColor="@color/white">

                    </TextView>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="359dp"
                android:layout_height="166dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="90dp"
                android:background="@drawable/rounded_background"
                android:clipToOutline="true"
                android:elevation="10dp"
                android:orientation="vertical">

                <!-- En-tête -->
                <LinearLayout
                    android:layout_width="400dp"
                    android:layout_height="40dp"
                    android:background="#52D9D9D9">

                    <ImageView
                        android:layout_width="47dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="90dp"
                        android:src="@drawable/calendrier">

                    </ImageView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/dons_par_ann_e"
                        android:textColor="@color/black"
                        android:textSize="15.5sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- Tableau -->
                <TableLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:divider="#00A9B3"
                    android:showDividers="middle">

                    <TableRow android:background="#00A9B3">

                        <TextView

                            android:layout_width="90dp"
                            android:padding="8dp"
                            android:text="@string/ann_e"
                            android:textColor="@color/white"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:padding="8dp"
                            android:text="@string/nombre_de_dons"
                            android:textColor="@color/white"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="131dp"
                            android:padding="8dp"
                            android:text="@string/montant_total"
                            android:textColor="@color/white"
                            android:textStyle="bold" />
                    </TableRow>

                    <TableRow>

                        <TextView
                            android:padding="8dp"
                            android:text="2024" />

                        <TextView
                            android:padding="8dp"
                            android:text="4" />

                        <TextView
                            android:padding="8dp"
                            android:text="170.00 €" />
                    </TableRow>

                    <TableRow>

                        <TextView
                            android:padding="8dp"
                            android:text="2023" />

                        <TextView
                            android:padding="8dp"
                            android:text="2" />

                        <TextView
                            android:padding="8dp"
                            android:text="100.00 €" />
                    </TableRow>

                </TableLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="359dp"
                android:layout_height="166dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/rounded_background"
                android:clipToOutline="true"
                android:elevation="10dp"
                android:orientation="vertical">

                <!-- En-tête -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#52D9D9D9">

                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="90dp"
                        android:src="@drawable/tourne">

                    </ImageView>

                    <TextView
                        android:layout_width="114dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/dons_r_currents"
                        android:textColor="@color/black"
                        android:textSize="15.5sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- Tableau -->
                <TableLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:divider="#00A9B3"
                    android:showDividers="middle">

                    <TableRow android:background="#00A9B3">

                        <TextView
                            android:layout_width="90dp"
                            android:padding="8dp"
                            android:text="@string/fr_quence"
                            android:textColor="@color/white"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:padding="8dp"
                            android:text="@string/nombre_de_dons"
                            android:textColor="@color/white"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="131dp"
                            android:padding="8dp"
                            android:text="@string/montant_total"
                            android:textColor="@color/white"
                            android:textStyle="bold" />
                    </TableRow>

                    <TableRow>

                        <TextView
                            android:padding="8dp"
                            android:text="Mensuel" />

                        <TextView
                            android:padding="8dp"
                            android:text="4" />

                        <TextView
                            android:padding="8dp"
                            android:text="170.00 €" />
                    </TableRow>

                    <TableRow>

                        <TextView
                            android:padding="8dp"
                            android:text="Trimestriel" />

                        <TextView
                            android:padding="8dp"
                            android:text="2" />

                        <TextView
                            android:padding="8dp"
                            android:text="100.00 €" />
                    </TableRow>

                </TableLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="359dp"
                android:layout_height="166dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="60dp"
                android:background="@drawable/rounded_background"
                android:clipToOutline="true"

                android:orientation="vertical"
                android:layout_gravity="center"
                >

                <!-- En-tête -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#52D9D9D9">

                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="90dp"
                        android:src="@drawable/tourne">

                    </ImageView>

                    <TextView
                        android:layout_width="114dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/dons_r_currents"
                        android:textColor="@color/black"
                        android:textSize="15.5sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- Tableau -->
                <TableLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:divider="#00A9B3"
                    android:showDividers="middle">

                    <TableRow android:background="#00A9B3">

                        <TextView
                            android:layout_width="90dp"
                            android:padding="8dp"
                            android:text="@string/fr_quence"
                            android:textColor="@color/white"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:padding="8dp"
                            android:text="@string/nombre_de_dons"
                            android:textColor="@color/white"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="131dp"
                            android:padding="8dp"
                            android:text="@string/montant_total"
                            android:textColor="@color/white"
                            android:textStyle="bold" />
                    </TableRow>

                    <TableRow>

                        <TextView
                            android:padding="8dp"
                            android:text="Mensuel" />

                        <TextView
                            android:padding="8dp"
                            android:text="4" />

                        <TextView
                            android:padding="8dp"
                            android:text="170.00 €" />
                    </TableRow>

                    <TableRow>

                        <TextView
                            android:padding="8dp"
                            android:text="Trimestriel" />

                        <TextView
                            android:padding="8dp"
                            android:text="2" />

                        <TextView
                            android:padding="8dp"
                            android:text="100.00 €" />
                    </TableRow>

                </TableLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginStart="35sp"
        android:orientation="horizontal"
        >

        <Button
            android:layout_width="34dp"
            android:layout_height="36dp"
            android:layout_marginStart="40dp"
            android:background="@drawable/wallet"
            app:backgroundTint="@null">

        </Button>

        <Button
            android:layout_width="34dp"

            android:layout_height="36dp"
            android:layout_marginStart="40dp"
            android:background="@drawable/home"
            app:backgroundTint="@null">

        </Button>

        <Button
            android:layout_width="34dp"
            android:layout_height="36dp"
            android:layout_marginStart="40dp"
            app:backgroundTint="@null"

            android:background="@drawable/add_ring">

        </Button>

        <Button
            android:layout_width="34dp"
            android:layout_height="36dp"
            android:layout_marginStart="40dp"
            android:background="@drawable/user_alt"
            app:backgroundTint="@null">
        </Button>
    </LinearLayout>
</LinearLayout>